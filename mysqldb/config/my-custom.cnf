[mysqld]
# Tamaño del buffer pool de InnoDB (ajusta según la RAM disponible)
innodb_buffer_pool_size = 3G

# Número máximo de conexiones simultáneas
max_connections = 151

# Tamaño máximo permitido para paquetes (útil para consultas grandes)
max_allowed_packet = 64M

# Conjunto de caracteres y collation por defecto
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Habilitar el registro binario (para replicación y backups)
log_bin = /var/lib/mysql/mysql-bin.log
expire_logs_days = 7

# Habilitar consultas lentas (útil para diagnóstico)
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/mysql-slow.log
long_query_time = 2

# Deshabilitar el caché de nombres de host y resolución DNS
skip-host-cache
skip-name-resolve

# Configuraciones de seguridad
secure-file-priv = /var/lib/mysql-files
local_infile = 0

connect_timeout = 25
#mysqlx_connect_timeout = 60

[client]
# Conjunto de caracteres por defecto para clientes
default-character-set = utf8mb4